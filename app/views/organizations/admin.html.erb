<% content_for :title, "Organization Admin" %>

<!-- Header Image & Text -->

<div class="header_image">
    <div class="header_container">
        <p class="header_text"> <%= pluralize(@organizations.size, 'Organizations') %> </p> 
    </div>
</div>

<!-- Organizations Table -->

<div class="...">

<table class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Organization Name</th>
            <th>Number Of Members</th>
            <th>Number Of Reports</th>
            <th>Delete Organization</th>
        </tr>
    </thead>
    <tbody>
  <% @organizations.each do |organization| %>
        <tr>
            <td> <%= link_to organization.id, organization %> </td>
            <td> <%= link_to organization.name, organization %> </td>
            <td> <%= organization.memberships.count %> </td>
            <td> <%= organization.reports.count %> </td>
            <td data-confirm="Are you sure?"><%= link_to 'Delete', organization, :method => :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger' %></td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>