<%= simple_form_for(@organization) do |f| %>
  <%= f.error_notification %>

  <div class="report_form">
  <fieldset>
    <%= f.input :name %>
  </div>

  <div class="form-actions form_margin">
   <%= f.button :submit, :class => 'btn btn-success btn-md' %>
   <%= link_to 'Cancel', organizations_path, :class => 'btn btn-danger btn-md' %>
  </div>
<% end %>